<div class="jumbotron">
    <div class="container">
      <h1 class="display-3"><%= @book.title %></h1>
      <p>Category: <%= @book.category_id %></p>
      <p>Author: <%= @book.author_id %></p>
      <p>Publisher:<%= @book.publisher_id %></p>
      <p>ISBN: <%= @book.isbn %></p>
      <p>Year: <%= @book.year %></p>
      <p>Format: <%= @book.format %></p>
      <p>Excerpt: <%= @book.excerpt %></p>
      <p>Page: <%= @book.pages %></p>
      <p>Price: <%= @book.price %></p>





    </div>
<p style="line-height: 80%">
<%= link_to 'Edit', edit_book_path(@book), :class => 'btn btn-default' %>
<%= link_to 'Delete post', @book, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
<%= link_to 'Back', books_path, :class => 'btn btn-default' %>
